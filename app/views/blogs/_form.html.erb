<%= form_with(model: blog, local: true) do |form| %>
  <div class="field">
    <%= form.label "제목" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label "내용" %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
